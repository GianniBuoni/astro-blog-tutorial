---
import Link from "./Link.astro";

interface Props {
  prevUrl?: string;
  nextUrl?: string;
}
const { prevUrl, nextUrl } = Astro.props;
---

<nav aria-label="Blog pages">
  {
    prevUrl && (
      <Link
        text="Pevious"
        href={prevUrl}
        style="primary"
        borderVisible={true}
        isFilled={false}
        icon={{
          name: "tabler:arrow-big-left",
          side: "left",
        }}
      />
    )
  }
  {
    nextUrl && (
      <Link
        text="Next"
        href={nextUrl}
        style="primary"
        borderVisible={true}
        isFilled={false}
        icon={{
          name: "tabler:arrow-big-right",
          side: "right",
        }}
      />
    )
  }
</nav>
