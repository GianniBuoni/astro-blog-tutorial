---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
import { slugify } from "@lib/utils";

interface Props {
  post: CollectionEntry<"blog">;
  tagType: any;
}

const { post, tagType } = Astro.props;
const Tag = tagType;
---

<article class="card">
  <small>
    <a href={`/category/${slugify(post.data.category)}`} class="badge"
      >{post.data.category}</a
    >
  </small>
  <a href={`/blog/${post.slug}`} aria-hidden="true">
    <Image
      src={post.data.image.src}
      alt={post.data.image.alt}
      width="400"
      height="250"
      format="avif"
    />
  </a>
  <div class="content">
    <Tag class="h3"><a href={`/blog/${post.slug}`}>{post.data.title}</a></Tag>
    <small
      >by <a href={`/author/${slugify(post.data.author)}`}>{post.data.author}</a
      ></small
    >
  </div>
  <p>{post.data.description}</p>
</article>
